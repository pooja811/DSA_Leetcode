class Solution {
    public int findClosest(int x, int y, int z) {
        // if(Math.abs(z-x)<Math.abs(z-y)){
        //     return 1;
        // }else if(Math.abs(z-x)>Math.abs(z-y)){
        //     return 2;
        // }else{
        //     return 0;
        // }
        int d1 = x>z ? x-z : z-x;
        int d2 = y>z ? y-z : z-y;

        if (d1==d2)
            return 0;
        return d1>d2 ? 2:1;
    }
}
